{
  "name": "sticky-bookmarks",
  "displayName": "Sticky Bookmarks",
  "publisher": "eridien",
  "description": "Lock bookmarks to code using inline tokens.",
  "version": "0.2.1",
  "type": "commonjs",
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./src/extension.js",
  "repository": "https://github.com/eridien/vscode-sticky-bookmarks",
  "license": "MIT",
  "contributes": {
    "commands": [
      {
        "command": "sticky-bookmarks.toggleKeyCmd",
        "title": "Toggle Bookmark On/Off",
        "category": "Sticky Bookmarks"
      }, {
        "command": "sticky-bookmarks.prevKeyCmd",
        "title": "Go To Previous Bookmark",
        "category": "Sticky Bookmarks"
      }, {
        "command": "sticky-bookmarks.nextKeyCmd",
        "title": "Go To Next Bookmark",
        "category": "Sticky Bookmarks"
      }, {
        "command": "sticky-bookmarks.clearFileKeyCmd",
        "title": "Remove All Marks From File",
        "category": "Sticky Bookmarks"
      }, {
        "command": "sticky-bookmarks.clearAllFilesKeyCmd",
        "title": "Remove All Marks From All Files",
        "category": "Sticky Bookmarks"
      }, {
        "command": "sticky-bookmarks.cleanFileKeyCmd",
        "title": "Cleanup All Marks In All Files",
        "category": "Sticky Bookmarks"
      }, {
        "command": "sticky-bookmarks.cleanAllFilesKeyCmd",
        "title": "Cleanup All Marks In All Files",
        "category": "Sticky Bookmarks"
      }, 

      {
        "command": "sticky-bookmarks.hideAllTitleCmd",
        "title": " üëÅÔ∏è‚Äçüó®Ô∏è "
      }, {
        "command": "sticky-bookmarks.cleanAllFilesTitleCmd",
        "title": " ‚ü≥ "
      }, {
        "command": "sticky-bookmarks.clearAllFilesTitleCmd",
        "title": " ‚úñ "
      }, 

      {
        "command": "sticky-bookmarks.cleanFldrFilesItemCmd",
        "title": " ‚ü≥ "
      }, {
        "command": "sticky-bookmarks.cleanFileItemCmd",
        "title": " ‚ü≥ "
      }, {
        "command": "sticky-bookmarks.cleanItemCmd",
        "title": "‚ùå"
      }, 

      {
        "command": "sticky-bookmarks.itemClickCmd",
        "title":  "-- Do Not Use -- Internal"
      }, {
        "command": "sticky-bookmarks.clearAllSavedData",
        "title": "-- Do Not Use -- Internal Debug",
        "category": "Sticky Bookmarks"
      }, {
        "command": "sticky-bookmarks.resetAll",
        "title": "-- Do Not Use -- Internal Debug",
        "category": "Sticky Bookmarks"
      }
    ],
    "keybindings": [ {
        "command": "sticky-bookmarks.toggleKeyCmd",
        "key": "ctrl+shift+alt+/",
        "mac": "cmd+shift+alt+/",
        "when": "editorTextFocus"
      },{
        "command": "sticky-bookmarks.prevKeyCmd",
        "key": "ctrl+shift+alt+,",
        "mac": "cmd+shift+alt+,",
        "when": "editorTextFocus"
      },{
        "command": "sticky-bookmarks.nextKeyCmd",
        "key": "ctrl+shift+alt+.",
        "mac": "cmd+shift+alt+.",
        "when": "editorTextFocus"
      },{
        "command": "sticky-bookmarks.clearFileKeyCmd",
        "key": "ctrl+shift+alt+'",
        "mac": "cmd+shift+alt+'",
        "when": "editorTextFocus"
      },{
        "command": "sticky-bookmarks.clearAllFilesKeyCmd",
        "key": "ctrl+shift+alt+;",
        "mac": "cmd+shift+alt+;",
        "when": "editorTextFocus"
      },{
        "command": "sticky-bookmarks.cleanFileKeyCmd",
        "key": "ctrl+shift+alt+]",
        "mac": "cmd+shift+alt+]",
        "when": "editorTextFocus"
      },{
        "command": "sticky-bookmarks.cleanAllFilesKeyCmd",
        "key": "ctrl+shift+alt+[",
        "mac": "cmd+shift+alt+[",
        "when": "editorTextFocus"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "stickyBookmarks",
          "title": "Sticky Bookmarks",
          "icon": "images/activity-icon.png"
        }
      ]
    },
    "views": {
      "stickyBookmarks": [
        {
          "id": "sidebarView",
          "name": "Sticky Bookmarks",
          "icon": "images/activity-icon.png"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "sticky-bookmarks.hideAllTitleCmd",
          "when":    "view == sidebarView",
          "group":   "navigation@1"
        }, {
          "command": "sticky-bookmarks.cleanAllFilesTitleCmd",
          "when":    "view == sidebarView",
          "group":   "navigation@2"
        }, {
          "command": "sticky-bookmarks.clearAllFilesTitleCmd",
          "when":    "view == sidebarView",
          "group":   "navigation@3"
        }
      ],

      "view/item/context": [
        {
          "command": "sticky-bookmarks.cleanFldrFilesItemCmd",
          "when":    "view == sidebarView && viewItem == folder",
          "group":   "inline@1"
        },{
          "command": "sticky-bookmarks.cleanFileItemCmd",
          "when":    "view == sidebarView && viewItem == file",
          "group":   "inline@2"
        },{
          "command": "sticky-bookmarks.cleanItemCmd",
          "when":    "view == sidebarView",
          "group":   "inline@3"
        }
      ]
    }
  },
  "scripts": {
    "lint": "eslint . --config eslint.config.mjs",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.24.0",
    "globals": "^13.24.0"
  }
}
